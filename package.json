    "eslint-config-a1motion": "2.2.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "ky": "^0.11.2",
    "linaria": "^1.3.1",
    "mime": "^2.4.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.10",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "react-textarea-autosize": "^7.1.0",
    "redux": "^4.0.4",
    "rimraf": "2.6.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.3",
    "smee-client": "^1.1.0",
    "webpack-bundle-analyzer": "^3.4.1"
  },
  "dependencies": {
    "@a1motion/color-code": "^1.1.2",
    "@sentry/node": "^5.6.1",
    "aws-sdk": "^2.507.0",
    "bull": "^3.10.0",
    "connect-redis": "^3.4.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "execa": "^2.0.3",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.16.2",
    "express-ws": "^4.0.0",
    "gh-got": "^8.1.0",
    "got": "^9.6.0",
    "graphql": "^14.4.2",
    "ioredis": "^4.14.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "lru-cache": "^5.1.1",
    "morgan": "^1.9.1",
    "nanoid": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.0",
